{
  "name": "@devdose/root",
  "version": "1.0.0",
  "description": "DevDose - Micro-learning platform for developers",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "backend:install": "cd apps/backend && npm install",
    "frontend:install": "cd apps/frontend && npm install",
    "backend:dev": "cd apps/backend && npm run dev",
    "backend:api": "cd apps/backend && npm run api",
    "backend:build": "cd apps/backend && npm run build",
    "frontend:dev": "cd apps/frontend && npm run dev",
    "frontend:build": "cd apps/frontend && npm run build",
    "dev": "concurrently \"npm run backend:api\" \"npm run frontend:dev\"",
    "install:all": "npm install && npm run backend:install && npm run frontend:install",
    "build:all": "npm run backend:build && npm run frontend:build",
    "pipeline": "cd apps/backend && npm run pipeline",
    "pipeline:discovery": "cd apps/backend && npm run discovery",
    "pipeline:extraction": "cd apps/backend && npm run extraction",
    "pipeline:processing": "cd apps/backend && npm run processing",
    "pipeline:quality": "cd apps/backend && npm run quality",
    "pipeline:enrichment": "cd apps/backend && npm run enrichment",
    "pipeline:publishing": "cd apps/backend && npm run publishing",
    "pipeline:single": "cd apps/backend && npm run single-source",
    "pipeline:verify": "cd apps/backend && npm run verify-source"
  },
  "keywords": [
    "devdose",
    "micro-learning",
    "monorepo",
    "education",
    "frontend"
  ],
  "author": "Vasu Vallabh",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
