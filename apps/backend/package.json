{
  "name": "@devdose/backend",
  "version": "1.0.0",
  "description": "Backend API and content pipeline for DevDose micro-learning app",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:api": "tsc --project tsconfig.api.json",
    "dev": "tsx src/cli.ts",
    "pipeline": "ts-node src/pipeline/index.ts",
    "discovery": "ts-node src/pipeline/discovery/index.ts",
    "extraction": "ts-node src/pipeline/extraction/index.ts",
    "processing": "ts-node src/pipeline/processing/index.ts",
    "quality": "ts-node src/pipeline/quality/index.ts",
    "enrichment": "ts-node src/pipeline/enrichment/index.ts",
    "publishing": "ts-node src/pipeline/publishing/index.ts",
    "api": "ts-node src/api/server.ts",
    "api:dev": "nodemon --watch src/api --exec ts-node src/api/server.ts",
    "test": "tsx src/pipeline/index.ts --test",
    "test-token": "tsx tests/test-github-token.ts",
    "test-supabase": "tsx tests/test-supabase.ts",
    "test-gemini": "tsx tests/test-gemini-models.ts",
    "test-docs-scraper": "tsx tests/test-docs-scraper.ts",
    "test-pipeline": "tsx tests/test-pipeline.ts",
    "verify-source": "tsx src/scripts/verify-source.ts",
    "single-source": "tsx src/scripts/run-single-source.ts",
    "add-source": "tsx src/scripts/add-source.ts",
    "import-sources": "tsx src/scripts/import-sources.ts",
    "clean-slate": "tsx src/scripts/clean-slate.ts"
  },
  "keywords": [
    "devdose",
    "micro-learning",
    "content-pipeline",
    "backend",
    "api",
    "education"
  ],
  "author": "Vasu Vallabh",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@octokit/rest": "^21.0.2",
    "@supabase/supabase-js": "^2.45.4",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "ollama": "^0.6.3",
    "p-limit": "^7.2.0",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2"
  }
}
